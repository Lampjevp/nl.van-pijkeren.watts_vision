        {
          "id": "3",
          "title": {
            "en": "ECO"
          }
        },
        {
          "id": "4",
          "title": {
            "en": "BOOST"
          }
        },
        {
          "id": "2",
          "title": {
            "en": "ANTI FREEZE"
          }
        },
        {
          "id": "1",
          "title": {
            "en": "OFF"
          }
        }
