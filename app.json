              {
                "id": "3",
                "label": {
                  "en": "ECO"
                }
              },
              {
                "id": "4",
                "label": {
                  "en": "Boost"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "AntiFreeze"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "OFF"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Watts Vision"
      },
      "class": "sensor",
